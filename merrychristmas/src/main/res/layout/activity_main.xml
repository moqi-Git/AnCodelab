<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. 这是什么？"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="12dp"
        android:textSize="20sp"
        android:textColor="@color/design_default_color_primary"
        android:layout_marginTop="12dp"
        android:id="@+id/tv_question_what"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_question_what"
        android:textSize="14sp"
        android:text="长按桌面空白区域添加组件/微件/工具，可以添加一颗快乐的小树到桌面，大小可以调整"
        android:padding="12dp"
        android:id="@+id/tv_answer_what"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. 那这个页面有什么用？"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_answer_what"
        android:paddingLeft="12dp"
        android:textSize="20sp"
        android:textColor="@color/design_default_color_primary"
        android:layout_marginTop="12dp"
        android:id="@+id/tv_question_why"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_question_why"
        android:textSize="14sp"
        android:text="没有用，但不配置这个页面，桌面上就不会显示图标，会不方便卸载"
        android:padding="12dp"
        android:id="@+id/tv_answer_why"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. 为什么快乐的小树如此朴素？"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_answer_why"
        android:paddingLeft="12dp"
        android:textSize="20sp"
        android:textColor="@color/design_default_color_primary"
        android:layout_marginTop="12dp"
        android:id="@+id/tv_question_todo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_question_todo"
        android:textSize="14sp"
        android:text="因为我不会画画。但这棵小树真的很快乐"
        android:padding="12dp"
        android:id="@+id/tv_answer_todo"/>

    <ImageView
        android:layout_width="64dp"
        android:layout_height="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_answer_todo"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_dota2_item_branches"/>
</androidx.constraintlayout.widget.ConstraintLayout>